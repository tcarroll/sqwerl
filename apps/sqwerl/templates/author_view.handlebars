<div class="properties-title">
    <div class="title-bar-title">{{name}}</div>
    <div class="title-bar-type">is an author</div>
    <span class="title-bar-links">
        {{#if hasConnections}}
            <span>linked to</span>
            {{#if hasMultipleConnections}}
                {{connectionCountText}} things
            {{else}}
                one thing
            {{/if}}
        {{/if}}
    </span>
    <span class="title-bar-right"></span>
</div>

<div class="properties-scrollable-content">
    <div>
        {{#if hasAuthorOf}}
            <div class="read-only-label-and-value">
                <div class="read-only-field-label">
                    {{#if hasMultipleAuthorOf}}
                        Author of <span class="read-only-field-label-count">{{authorOf.totalCount}}</span> things
                    {{else}}
                        Author of
                    {{/if}}
                </div>
                {{#if hasMultipleAuthorOf}}
                    {{#each authorOf.members class="read-only-field-value" tagName="div"}}
                        <span class="ordinal">{{position}}.</span>
                        <span><a href="#{{ref id}}">{{name}}</a> ({{#typeOfThingName}}{{/typeOfThingName}})</span>
                    {{/each}}
                {{else}}
                    {{#each authorOf.members class="read-only-field-value" tagName="div"}}
                        <span><a href="#{{ref id}}">{{name}}</a> ({{#typeOfThingName}}{{/typeOfThingName}})</span>
                    {{/each}}
                {{/if}}
            </div>
        {{/if}}

        {{#if linkedInUrl}}
            <div class="read-only-label-and-value">
                <div class="read-only-field-label">LinkedIn page</div>
                <div class="read-only-field-value"><a {{bindAttr href="linkedInUrl"}}><span class="ti-linkedin"></span></a></div>
            </div>
        {{/if}}

        {{#if hasInstructed}}
            <div class="read-only-label-and-value">
                <div class="read-only-field-label">
                    {{#if hasMultipleInstructed}}
                        Instructed <span class="read-only-field-label-count">{{instructed.totalCount}}</span> courses
                    {{else}}
                        Instructed course
                    {{/if}}
                </div>
                {{#if hasMultipleInstructed}}
                    {{#each instructed.members class="read-only-field-value" tagName="div"}}
                        <span class="ordinal">{{position}}.</span>
                        <span><a href="#{{ref id}}">{{name}}</a></span>
                    {{/each}}
                {{else}}
                    {{#each instructed.members class="read-only-field-value" tagName="div"}}
                        <span><a href="#{{ref id}}">{{name}}</a></span>
                    {{/each}}
                {{/if}}
            </div>
        {{/if}}

        {{#if hasSpokeAt}}
            <div class="read-only-label-and-value">
                <div class="read-only-field-label">
                    {{#if hasMultipleSpokeAt}}
                        Spoke at <span class="read-only-field-label-count">{{spokeAt.totalCount}}</span> events
                    {{else}}
                        Spoke at
                    {{/if}}
                </div>
                {{#if hasMultipleSpokeAt}}
                    {{#each spokeAt.members class="read-only-field-value" tagName="div"}}
                        <span class="ordinal">{{position}}.</span>
                        <span><a href="#{{ref id}}">{{name}}</a> ({{#typeOfThingName}}{{/typeOfThingName}})</span>
                    {{/each}}
                {{else}}
                    {{#each spokeAt.members class="read-only-field-value" tagName="div"}}
                        <span><a href="#{{ref id}}">{{name}}</a> ({{#typeOfThingName}}{{/typeOfThingName}})</span>
                    {{/each}}
                {{/if}}
            </div>
        {{/if}}

        {{#if hasLinks}}
            <div class="read-only-label-and-value">
                <div class="read-only-field-label">
                    {{#if hasMultipleLinks}}
                        Links to <span class="read-only-field-label-count">{{links.totalCount}}</span> things
                    {{else}}
                        Linked to
                    {{/if}}
                </div>
                {{#if hasMultipleLinks}}
                    {{#each links.members class="read-only-field-value" tagName="div"}}
                        <span class="ordinal">{{position}}.</span>
                        <span><a href="#{{ref id}}">{{name}}</a> ({{#typeOfThingName}}{{/typeOfThingName}}) links to
                            {{numberFormat linksCount}} {{singularOrPlural linksCount thing things}}</span>
                    {{/each}}
                {{else}}
                    {{#each links.members class="read-only-field-value" tagName="div"}}
                        <span><a href="#{{ref id}}">{{name}}</a> ({{#typeOfThingName}}{{/typeOfThingName}}) links to
                            {{numberFormat linksCount}} {{singularOrPlural linksCount thing things}}</span>
                    {{/each}}
                {{/if}}
            </div>
        {{/if}}

        {{#if hasTags}}
            <div class="read-only-label-and-value">
                <div class="read-only-field-label">
                    {{#if hasMultipleTags}}
                        Tagged with <span class="read-only-field-label-count">{{tags.totalCount}}</span> tags
                    {{else}}
                        Tag
                    {{/if}}
                </div>
                {{#if hasMultipleTags}}
                    {{#each tags.members class="read-only-field-value" tagName="div"}}
                        <span class="ordinal">{{position}}.</span>
                        <span><a href="#{{ref id}}">{{name}}</a> {{numberFormat taggedCount}} {{singularOrPlural taggedCount
                                                                                                             "thing has" "things have"}} the same tag</span>
                    {{/each}}
                {{else}}
                    {{#each tags.members class="read-only-field-value" tagName="div"}}
                        <span><a href="#{{ref id}}">{{name}}</a> {{numberFormat taggedCount}} {{singularOrPlural taggedCount
                                                                                                             "thing has" "things have"}} the same tag</span>
                    {{/each}}
                {{/if}}
            </div>
        {{/if}}

        {{#if createdOn}}
            <div class="read-only-label-and-value">
                <div class="read-only-field-label">History</div>
                <div class="read-only-field-value">
                    {{creator.name}} added this author on {{formatDate createdOn}}
                </div>
            </div>
        {{/if}}
    </div>
</div>