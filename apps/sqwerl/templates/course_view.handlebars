<div class="properties-title">
    <div class="title-bar-title">{{name}}</div>
    <div class="title-bar-type">is an academic course</div>
    <span class="title-bar-links">
        {{#if hasConnections}}
            <span>with</span>
            {{#if hasMultipleConnections}}
                {{connectionCountText}} links
            {{else}}
                one link
            {{/if}}
        {{/if}}
    </span>
    <span class="title-bar-right"></span>
</div>

<div class="properties-scrollable-content">
    <div>
        {{#if description}}
            <div class="read-only-label-and-value">
                <div class="read-only-field-label">Full description</div>
                <div class="read-only-field-value">{{description}}</div>
            </div>
        {{/if}}

        {{#if hasInstructors}}
            <div class="read-only-label-and-value">
                <div class="read-only-field-label">
                    {{#if hasMultipleInstructors}}
                        Instructors <span class="read-only-field-label-count">{{numberFormat instructors.totalCount}}</span>
                    {{else}}
                        Instructor
                    {{/if}}
                </div>
                {{#if hasMultipleInstructors}}
                    {{#each instructors.members class="read-only-field-value" tagName="div"}}
                        <span class="ordinal">{{position}}.</span>
                        <span><a href="#{{ref id}}">{{name}}</a> has instructed {{numberFormat instructedCount}}
                            {{singularOrPlural instructedCount course courses}}</span>
                    {{/each}}
                {{else}}
                    {{#each instructors.members class="read-only-field-value" tagName="div"}}
                        <span><a href="#{{ref id}}">{{name}}</a> has instructed {{numberFormat instructedCount}}
                            {{singularOrPlural instructedCount course courses}}</span>
                    {{/each}}
                {{/if}}
            </div>
        {{/if}}

        {{#if hasAttended}}
            <div class="read-only-field-label">I attended this course</div>
        {{/if}}

        {{#if hasCategories}}
            <div class="read-only-label-and-value">
                <div class="read-only-field-label">
                    {{#if hasMultipleCategories}}
                        Categories <span class="read-only-field-label-count">{{categories.totalCount}}</span>
                    {{else}}
                        Category
                    {{/if}}
                </div>
                {{#if hasMultipleCategories}}
                    {{#each categories.members class="read-only-field-value" tagName="div"}}
                        <span class="ordinal">{{position}}.</span>
                        <span><a href="#{{ref id}}">{{#thingPath}}{{/thingPath}}</a> has {{numberFormat childrenCount}}
                            {{singularOrPlural childrenCount child children}}</span>
                    {{/each}}
                {{else}}
                    {{#each categories.members class="read-only-field-value" tagName="div"}}
                        <span><a href="#{{ref id}}">{{#thingPath}}{{/thingPath}}</a> has {{numberFormat childrenCount}}
                            {{singularOrPlural childrenCount child children}}</span>
                    {{/each}}
                {{/if}}
            </div>
        {{/if}}

        {{#if hasNotes}}
            <div class="read-only-label-and-value">
                <div class="read-only-field-label">
                    {{#if hasMultipleNotes}}
                        Notes <span class="read-only-field-label-count">{{notes.totalCount}}</span>
                    {{else}}
                        Notes
                    {{/if}}
                </div>
                {{#if hasMultipleNotes}}
                    {{#each notes.members class="read-only-field-value" tagName="div"}}
                        <span class="ordinal">{{position}}.</span>
                        <span><a href="#{{ref id}}">{{name}}</a></span>
                    {{/each}}
                {{else}}
                    {{#each notes.members class="read-only-field-value" tagName="div"}}
                        <span><a href="#{{ref id}}">{{name}}</a></span>
                    {{/each}}
                {{/if}}
            </div>
        {{/if}}

        {{#if hasAttendedBy}}
            <div class="read-only-label-and-value">
                <div class="read-only-field-label">
                    {{#if hasMultipleAttendedBy}}
                        Attended by <span class="read-only-field-label-count">{{attendedBy.totalCount}}</span> people
                    {{else}}
                        Attendee
                    {{/if}}
                </div>
                {{#if hasMultipleAttendedBy}}
                    {{#each attendedBy.members class="read-only-field-value" tagName="div"}}
                        <span class="ordinal">{{position}}.</span>
                        <span><a href="{{id}}">{{name}}</a> has attended {{numberFormat hasAttendedCount}}
                            {{singularOrPlural hasAttendedCount course courses}}</span>
                    {{/each}}
                {{else}}
                    {{#each attendedBy.members class="read-only-field-value" tagName="div"}}
                        <span><a href="{{id}}">{{name}}</a> has attended {{numberFormat hasAttendedCount}}
                            {{singularOrPlural hasAttendedCount course courses}}</span>
                    {{/each}}
                {{/if}}
            </div>
        {{/if}}

        {{#if hasRecommendedBy}}
            <div class="read-only-label-and-value">
                <div class="read-only-field-label">
                    {{#if hasMultipleRecommendedBy}}
                        Recommended by <span class="read-only-field-label-count">{{recommendedBy.totalCount}}</span> things
                    {{else}}
                        Recommended by
                    {{/if}}
                </div>
                {{#if hasMultipleRecommendedBy}}
                    {{#each recommendedBy.members class="read-only-field-value" tagName="div"}}
                        <span class="ordinal">{{position}}.</span>
                        <span><a href="#{{ref id}}">{{name}}</a> ({{#typeOfThingName}}{{/typeOfThingName}}) has recommended
                            {{numberFormat recommendationsCount}} {{singularOrPlural recommendationsCount thing things}}</span>
                    {{/each}}
                {{else}}
                    {{#each recommendedBy.members class="read-only-field-value" tagName="div"}}
                        <span><a href="#{{ref id}}">{{name}}</a> ({{#typeOfThingName}}{{/typeOfThingName}}) has recommended
                            {{numberFormat recommendationsCount}} {{singularOrPlural recommendationsCount thing things}}</span>
                    {{/each}}
                {{/if}}
            </div>
        {{/if}}

        {{#if hasRecommendations}}
            <div class="read-only-label-and-value">
                <div class="read-only-field-label">
                    {{#if hasMultipleRecommendations}}
                        Recommends <span class="read-only-field-label-count">{{recommendations.totalCount}}</span> things
                    {{else}}
                        Recommends
                    {{/if}}
                </div>
                {{#if hasMultipleRecommendations}}
                    {{#each recommendations.members class="read-only-field-value" tagName="div"}}
                        <span class="ordinal">{{position}}.</span>
                        <span><a href="#{{ref id}}">{{name}}</a> ({{#typeOfThingName}}{{/typeOfThingName}})</span>
                    {{/each}}
                {{else}}
                    {{#each recommendations.members class="read-only-field-value" tagName="div"}}
                        <span><a href="#{{ref id}}">{{name}}</a> ({{#typeOfThingName}}{{/typeOfThingName}})</span>
                    {{/each}}
                {{/if}}
            </div>
        {{/if}}

        {{#if hasTags}}
            <div class="read-only-label-and-value">
                <div class="read-only-field-label">
                    {{#if hasMultipleTags}}
                        Tagged with <span class="read-only-field-label-count">{{tags.totalCount}}</span> tags
                    {{else}}
                        Tag
                    {{/if}}
                </div>
                {{#if hasMultipleTags}}
                    {{#each tags.members class="read-only-field-value" tagName="div"}}
                        <span class="ordinal">{{position}}.</span>
                        <span><a href="#{{ref id}}">{{name}}</a> {{#typeOfThingName}}{{/typeOfThingName}}) {{numberFormat
                                taggedCount}} {{singularOrPlural taggedCount "thing has" "things have"}} the same tag</span>
                    {{/each}}
                {{else}}
                    {{#each tags.members class="read-only-field-value" tagName="div"}}
                        <span><a href="#{{ref id}}">{{name}}</a> {{#typeOfThingName}}{{/typeOfThingName}}) {{numberFormat
                                taggedCount}} {{singularOrPlural taggedCount "thing has" "things have"}} the same tag</span>
                    {{/each}}
                {{/if}}
            </div>
        {{/if}}

        {{#if hasLinks}}
            <div class="read-only-label-and-value">
                <div class="read-only-field-label">
                    {{#if hasMultipleLinks}}
                        Links to <span class="read-only-field-label-count">{{links.totalCount}}</span> things
                    {{else}}
                        Linked to
                    {{/if}}
                </div>
                {{#if hasMultipleLinks}}
                    {{#each links.members class="read-only-field-value" tagName="div"}}
                        <span class="ordinal">{{position}}.</span>
                        <span><a href="#{{ref id}}">{{name}}</a> ({{#typeOfThingName}}{{/typeOfThingName}})</span>
                    {{/each}}
                {{else}}
                    {{#each links.members class="read-only-field-value" tagName="div"}}
                        <span><a href="#{{ref id}}">{{name}}</a> ({{#typeOfThingName}}{{/typeOfThingName}})</span>
                    {{/each}}
                {{/if}}
            </div>
        {{/if}}

        {{#if createdOn}}
            <div class="read-only-label-and-value">
                <div class="read-only-field-label">History</div>
                <div class="read-only-field-value">
                    {{creator.name}} added this course on {{formatDate createdOn}}
                </div>
            </div>
        {{/if}}
    </div>
</div>