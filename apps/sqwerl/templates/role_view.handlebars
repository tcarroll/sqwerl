<div class="properties-title">
    <div class="title-bar-title">{{name}}</div>
    <div class="title-bar-type">Role <span class="ti-face-smile"></span></div>
    <span class="title-bar-links">
        {{#if hasConnections}}
            {{#if hasMultipleConnections}}
                {{connectionCount}} links
            {{else}}
                1 link
            {{/if}}
        {{else}}
            No links
        {{/if}}
    </span>
</div>

<div class="properties-scrollable-content">
    <div>
        {{#if description}}
            <div class="read-only-label-and-value">
                <div class="read-only-field-label">Full description</div>
                <div class="read-only-field-value">{{description}}</div>
            </div>
        {{/if}}

        {{#if hasGroups}}
            <div class="read-only-label-and-value">
                {{#if hasMultipleGroups}}
                    <div class="read-only-field-label">Groups ({{groups.totalCount}})</div>
                    <div class="read-only-field-value">The following {{groups.totalCount}}
                        groups of users have been granted the {{name}} role's capabilities
                    </div>
                    {{#each groups.members class="read-only-field-value" tagName="div"}}
                        <span><a href="#{{id}}">{{name}}</a></span>
                    {{/each}}
                {{else}}
                    <div class="read-only-field-label">Group</div>
                    <div class="read-only-field-value">Users who are members of the {{singleGroupName}}
                        group have been granted the {{name}} role's capabilities</div>
                {{/if}}
            </div>
        {{/if}}

        {{#if hasCapabilities}}
            <div class="read-only-label-and-value">
                {{#if hasMultipleCapabilities}}
                    <div class="read-only-field-label">Capabilities ({{capabilities.totalCount}})</div>
                    <div class="read-only-field-value">Users who can perform the {{name}} role are
                        granted the following {{capabilities.totalCount}} capabilities
                    </div>
                    <div>
                        {{#each capabilities.members class="read-only-field-value" tagName="div"}}
                            <span><a href="#{{id}}">{{name}}</a></span>
                        {{/each}}
                    </div>
                {{else}}
                    <div class="read-only-field-label">Capability</div>
                    <div class="read-only-field-value">Users who can perform the {{name}} role are
                        granted the {{singleCapabilityName}} capability
                    </div>
                {{/if}}
            </div>
        {{/if}}
    </div>
</div>